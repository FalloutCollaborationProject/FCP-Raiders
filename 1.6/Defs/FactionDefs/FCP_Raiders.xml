<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Factions __________-->

    <!-- Raiders -->

    <FactionDef ParentName="FactionBase">
        <defName>FCP_Faction_Raider</defName>
        <label>Raider Gangs</label>
        <description>The Raider Gangs are a loose confederation of bandit groups operating in the wasteland. They are known for their brutal tactics, scavenging, and raiding of settlements. While they often fight among themselves, they can unite against common foes. The Raiders reject the old world values and instead embrace a survival-of-the-fittest mentality. They are feared and despised by many, but also hold a certain allure for those seeking freedom from the constraints of civilization.</description>
        <royalTitleTags>
            <li>FCP_Title_Raider</li>
        </royalTitleTags>
        <royalFavorLabel>Trophies</royalFavorLabel>
        <royalTitleInheritanceWorkerClass>RoyalTitleInheritanceWorker</royalTitleInheritanceWorkerClass>
        <royalTitleInheritanceRelations>
        </royalTitleInheritanceRelations>
        <colorSpectrum>
            <li>(1, 1, 1)</li>
        </colorSpectrum>
        <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
        <pawnSingular>Raider</pawnSingular>
        <pawnsPlural>Raiders</pawnsPlural>
        <categoryTag>Outlander</categoryTag>
        <settlementGenerationWeight>1</settlementGenerationWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <permanentEnemy>true</permanentEnemy>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <leaderTitle>Raider Boss</leaderTitle>
        <factionIconPath>World_Icon/Raider_Icon/FCP_Raider_World_Icon</factionIconPath>
        <techLevel>Industrial</techLevel>
        <fixedName>Raider Gangs</fixedName>
        <settlementNameMaker>FCP_Namer_Settlement_Raiders</settlementNameMaker>
        <allowedCultures>
            <li>FCP_Culture_Raider</li>
        </allowedCultures>
        <fixedLeaderKinds>
            <li>FCP_Raider_Warlord</li>
        </fixedLeaderKinds>

        <!--__________ Ideology __________-->

        <fixedIdeo>true</fixedIdeo>
        <ideoName>Raiding Mentality</ideoName>
        <ideoDescription>Founded on principles of survival and strength, the Raider Gangs believe in taking what they need by force. They reject the old world's values and embrace a brutal code of conduct where only the strong survive.</ideoDescription>
        <styles>
            <li>FCP_Style_Raider</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Morbid</li>
        </styles>
        <forcedMemes>
            <!-- Structure -->
            <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
        </forcedMemes>
        <requiredPreceptsOnly>true</requiredPreceptsOnly>

		<!--__________ Biotech __________-->

		<xenotypeSet>
			<xenotypeChances>
				<Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0</Neanderthal>
				<Hussar MayRequire="Ludeon.RimWorld.Biotech">0</Hussar>
				<Pigskin MayRequire="Ludeon.RimWorld.Biotech">0</Pigskin>
				<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0</Yttakin>
				<Genie MayRequire="Ludeon.RimWorld.Biotech">0</Genie>
				<Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0</Dirtmole>
				<Highmate MayRequire="Ludeon.RimWorld.Biotech">0</Highmate>
			</xenotypeChances>
		</xenotypeSet>

        <!--__________ Backstories __________-->
        
        <backstoryFilters>
            <li>
                <categories>
                    <li>FCP_Backstory_Raiders</li>
                    <li>FCP_Backstory_Raiders_Child</li>
                </categories>
                <commonality>1</commonality>
            </li>
        </backstoryFilters>

        <!--__________ Kinds __________-->

        <!-- Caravan Trader Kinds -->
        
        <caravanTraderKinds>
        </caravanTraderKinds>

        <!-- Vistor Trader Kinds -->
        
        <visitorTraderKinds>
        </visitorTraderKinds>

        <!-- Base Trader Kinds -->
        
        <baseTraderKinds>
        </baseTraderKinds>

        <!-- Trader Kind Arrival Options -->
        
        <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
        <raidLootMaker>FCP_RaiderRaidLootMaker</raidLootMaker>
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,35)</li>
                <li>(70, 50)</li>
                <li>(700, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>

        <!--__________ Group Makers __________-->
        
        <pawnGroupMakers>

            <!-- Slavers Combat -->

            <li>
                <kindDef>Combat</kindDef>
                <disallowedStrategies>
                    <li>EmergeFromWater</li>
                </disallowedStrategies>
                <options>
                    <FCP_Slaver_Guard>10</FCP_Slaver_Guard>
                    <FCP_Slaver_Collarer_Pawn>8</FCP_Slaver_Collarer_Pawn>
                    <FCP_Slaver_Enforcer_Pawn>7</FCP_Slaver_Enforcer_Pawn>
                    <FCP_Slaver_Boss>2</FCP_Slaver_Boss>
                </options>
            </li>

            <!-- Jackals Combat -->

            <li>
                <kindDef>Combat</kindDef>
                <disallowedStrategies>
                    <li>EmergeFromWater</li>
                </disallowedStrategies>
                <options>
                    <FCP_Jackal_Raider>12</FCP_Jackal_Raider>
                    <FCP_Jackal_Gunner>8</FCP_Jackal_Gunner>
                    <FCP_Jackal_Scavenger>6</FCP_Jackal_Scavenger>
                    <FCP_Jackal_Bruiser>5</FCP_Jackal_Bruiser>
                    <FCP_Jackal_Leader>2</FCP_Jackal_Leader>
                </options>
            </li>

            <!-- Vipers Combat -->

            <li>
                <kindDef>Combat</kindDef>
                <disallowedStrategies>
                    <li>EmergeFromWater</li>
                </disallowedStrategies>
                <options>
                    <FCP_Viper_Cultist_Pawn>10</FCP_Viper_Cultist_Pawn>
                    <FCP_Viper_Marksman>7</FCP_Viper_Marksman>
                    <FCP_Viper_PoisonBlade_Pawn>6</FCP_Viper_PoisonBlade_Pawn>
                    <FCP_Viper_VenomMaster_Pawn>4</FCP_Viper_VenomMaster_Pawn>
                    <FCP_Viper_Priest_Pawn>2</FCP_Viper_Priest_Pawn>
                </options>
            </li>

            <!-- Forged Combat -->

            <li>
                <kindDef>Combat</kindDef>
                <disallowedStrategies>
                    <li>EmergeFromWater</li>
                </disallowedStrategies>
                <options>
                    <FCP_Forged_Raider>10</FCP_Forged_Raider>
                    <FCP_Forged_Flamer>7</FCP_Forged_Flamer>
                    <FCP_Forged_Incinerator_Pawn>5</FCP_Forged_Incinerator_Pawn>
                    <FCP_Forged_Smith>3</FCP_Forged_Smith>
                    <FCP_Forged_Master>2</FCP_Forged_Master>
                </options>
            </li>

            <!-- Scorpions Combat -->

            <li>
                <kindDef>Combat</kindDef>
                <disallowedStrategies>
                    <li>EmergeFromWater</li>
                </disallowedStrategies>
                <options>
                    <FCP_Scorpion_Thug>12</FCP_Scorpion_Thug>
                    <FCP_Scorpion_Enforcer>8</FCP_Scorpion_Enforcer>
                    <FCP_Scorpion_Pickpocket_Pawn>6</FCP_Scorpion_Pickpocket_Pawn>
                    <FCP_Scorpion_ChemDealer>4</FCP_Scorpion_ChemDealer>
                    <FCP_Scorpion_Leader>2</FCP_Scorpion_Leader>
                </options>
            </li>

            <!-- Fiends Combat -->

            <li>
                <kindDef>Combat</kindDef>
                <disallowedStrategies>
                    <li>EmergeFromWater</li>
                </disallowedStrategies>
                <options>
                    <FCP_Fiend_Junkie>12</FCP_Fiend_Junkie>
                    <FCP_Fiend_Gunner>9</FCP_Fiend_Gunner>
                    <FCP_Fiend_Berserker>7</FCP_Fiend_Berserker>
                    <FCP_Fiend_Slasher>6</FCP_Fiend_Slasher>
                    <FCP_Fiend_Overlord>2</FCP_Fiend_Overlord>
                </options>
            </li>

            <!-- Raiders Peaceful/Leader Generation -->

            <li>
                <kindDef>Peaceful</kindDef>
                <options>
                    <FCP_Raider_Warlord>1</FCP_Raider_Warlord>
                    <FCP_Slaver_Boss>3</FCP_Slaver_Boss>
                    <FCP_Slaver_Trader>5</FCP_Slaver_Trader>
                    <FCP_Slaver_Guard>6</FCP_Slaver_Guard>
                    <FCP_Jackal_Leader>3</FCP_Jackal_Leader>
                    <FCP_Jackal_Raider>8</FCP_Jackal_Raider>
                    <FCP_Viper_Priest_Pawn>3</FCP_Viper_Priest_Pawn>
                    <FCP_Viper_Cultist_Pawn>6</FCP_Viper_Cultist_Pawn>
                    <FCP_Forged_Master>3</FCP_Forged_Master>
                    <FCP_Forged_Raider>7</FCP_Forged_Raider>
                    <FCP_Scorpion_Leader>3</FCP_Scorpion_Leader>
                    <FCP_Scorpion_Thug>8</FCP_Scorpion_Thug>
                    <FCP_Fiend_Overlord>3</FCP_Fiend_Overlord>
                    <FCP_Fiend_Junkie>7</FCP_Fiend_Junkie>
                </options>
            </li>

            <!-- Raiders Settlement -->

            <li>
                <kindDef>Settlement</kindDef>
                <options>
                    <FCP_Raider_Warlord>1</FCP_Raider_Warlord>
                    <FCP_Slaver_Boss>2</FCP_Slaver_Boss>
                    <FCP_Slaver_Trader>4</FCP_Slaver_Trader>
                    <FCP_Slaver_Guard>8</FCP_Slaver_Guard>
                    <FCP_Slaver_Collarer_Pawn>6</FCP_Slaver_Collarer_Pawn>
                    <FCP_Jackal_Leader>2</FCP_Jackal_Leader>
                    <FCP_Jackal_Raider>9</FCP_Jackal_Raider>
                    <FCP_Jackal_Scavenger>7</FCP_Jackal_Scavenger>
                    <FCP_Viper_Priest_Pawn>2</FCP_Viper_Priest_Pawn>
                    <FCP_Viper_Cultist_Pawn>8</FCP_Viper_Cultist_Pawn>
                    <FCP_Forged_Master>2</FCP_Forged_Master>
                    <FCP_Forged_Smith>3</FCP_Forged_Smith>
                    <FCP_Forged_Raider>8</FCP_Forged_Raider>
                    <FCP_Scorpion_Leader>2</FCP_Scorpion_Leader>
                    <FCP_Scorpion_ChemDealer>4</FCP_Scorpion_ChemDealer>
                    <FCP_Scorpion_Thug>10</FCP_Scorpion_Thug>
                    <FCP_Scorpion_Pickpocket_Pawn>6</FCP_Scorpion_Pickpocket_Pawn>
                    <FCP_Fiend_Overlord>2</FCP_Fiend_Overlord>
                    <FCP_Fiend_Berserker>6</FCP_Fiend_Berserker>
                    <FCP_Fiend_Gunner>7</FCP_Fiend_Gunner>
                    <FCP_Fiend_Junkie>8</FCP_Fiend_Junkie>
                </options>
            </li>
        </pawnGroupMakers>
        <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
        <modExtensions Inherit="False">
            <!-- Make them unable to use drop pods -->
            <li Class="FCP.Core.ModExtension_FactionBannedArrivalModes">
                <arrivalModes>
                    <li>EdgeDrop</li>
                    <li>EdgeDropGroups</li>
                    <li>CenterDrop</li>
                    <li>RandomDrop</li>
                </arrivalModes>
            </li>
            <!-- Ideology stuff -->
            <li Class="FCP.Core.ModExtension_FixedIdeo">
                <ideoIconDef>FCP_Icon_Raider</ideoIconDef>
                <ideoColorDef>LightGrey</ideoColorDef>
                <memberName>Raider</memberName>
                <adjective>Raider Gang</adjective>
                <roleOverrides>
                    <li>
                        <preceptDef>IdeoRole_Leader</preceptDef>
                        <disableApparelRequirements>true</disableApparelRequirements>
                    </li>
                    <li>
                        <preceptDef>IdeoRole_Moralist</preceptDef>
                        <newName>Representative</newName>
                        <disableApparelRequirements>true</disableApparelRequirements>
                        <!--<apparelRequirementsOverride></apparelRequirementsOverride>-->
                    </li>
                </roleOverrides>
            </li>
            <!-- Territory stuff -->
            <!-- <li class="FCP.Core.ModExtension_FactionTerritory">
                <territoryColor>(222, 49, 41)</territoryColor>
                <territoryBorderColor>(116, 22, 42)</territoryBorderColor>
                <factionLabelColor>(0.9, 0.9, 0.8, 1.0)</factionLabelColor>
                <initialTerritoryRadius>10</initialTerritoryRadius>
                <renderTerritoryOverWater>false</renderTerritoryOverWater>
            </li> -->
        </modExtensions>
    </FactionDef>

    <ThingSetMakerDef>
        <defName>FCP_RaiderRaidLootMaker</defName>
        <root Class="ThingSetMaker_MarketValue">
            <fixedParams>
                <filter>
                    <thingDefs>
                        <li>Silver</li>
                        <li>MedicineIndustrial</li>
                        <li>ComponentIndustrial</li>
                        <li>MealSurvivalPack</li>
                        <li>Neutroamine</li>
                        <li>Steel</li>
                        <li>Cloth</li>
                        <li>Chemfuel</li>
                        <li MayRequire="Rick.FCP.Chems">FCP_Chem_Jet</li>
                        <li MayRequire="Rick.FCP.Chems">FCP_Chem_Psycho</li>
                        <li MayRequire="Rick.FCP.Chems">FCP_Chem_Buffout</li>
                        <li MayRequire="Rick.FCP.Chems">FCP_Chem_Mentats</li>
                        <li MayRequire="Rick.FCP.Chems">FCP_Chem_Turbo</li>
                        <li MayRequire="Rick.FCP.Chems">FCP_Chem_Stimpak</li>
                        <li MayRequire="Rick.FCP.Chems">FCP_Chem_Super_Stimpak</li>
                        <li MayRequire="Rick.FCP.Chems">FCP_Chem_MedX</li>
                        <li MayRequire="Rick.FCP.Currency">FCP_Currency_Caps</li>
                    </thingDefs>
                </filter>
            </fixedParams>
        </root>
    </ThingSetMakerDef>

</Defs>
