<Defs>

    <!--__________ Pawnkinds __________-->

    <!--_____ Raider Pawnkinds _____-->

    <!--___ Base Pawnkind ___-->

    <PawnKindDef Name="FCP_RaiderBase" Abstract="True">
        <race>Human</race>
        <defaultFactionType>FCP_Faction_Raiders</defaultFactionType>
        <chemicalAddictionChance>0.15</chemicalAddictionChance>
        <invNutrition>2.55</invNutrition>
        <itemQuality>Poor</itemQuality>
        <backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
        <forceNormalGearQuality>true</forceNormalGearQuality>
    </PawnKindDef>

    <!--___ Overall Faction Leader ___-->

    <!-- Raider Warlord - Can use any backstory category -->

    <PawnKindDef ParentName="FCP_RaiderBase">
        <defName>FCP_Raider_Warlord</defName>
        <label>raider warlord</label>
        <labelPlural>raider warlords</labelPlural>
        <combatPower>180</combatPower>
        <canBeSapper>true</canBeSapper>
        <itemQuality>Good</itemQuality>
        <gearHealthRange>1.0~2.0</gearHealthRange>
        <apparelMoney>2000~3500</apparelMoney>
        <apparelAllowHeadgearChance>1.0</apparelAllowHeadgearChance>
        <weaponMoney>1200~2000</weaponMoney>
        <weaponTags>
            <li>IndustrialGunAdvanced</li>
            <li MayRequire="Rick.FCP.BallisticWeapons">FCP_Assault_Rifle</li>
            <li MayRequire="Rick.FCP.BallisticWeapons">FCP_Shotgun</li>
            <li MayRequire="Rick.FCP.EnergyWeapons">FCP_Laser_Rifle</li>
            <li MayRequire="Rick.FCP.EnergyWeapons">FCP_Plasma_Rifle</li>
            <li MayRequire="Rick.FCP.MeleeWeapons">FCP_Melee_Advanced</li>
        </weaponTags>
        <specificApparelRequirements>
            <li>
                <bodyPartGroup>Torso</bodyPartGroup>
                <stuff>Steel</stuff>
                <apparelLayer>Middle</apparelLayer>
            </li>
        </specificApparelRequirements>
        <backstoryFiltersOverride>
            <li>
                <categoriesAdulthood>
                    <li>FCP_Backstory_Raiders</li>
                    <li>FCP_Backstory_Slavers</li>
                    <li>FCP_Backstory_Jackals</li>
                    <li>FCP_Backstory_Vipers</li>
                    <li>FCP_Backstory_Forged</li>
                    <li>FCP_Backstory_Scorpions</li>
                </categoriesAdulthood>
            </li>
        </backstoryFiltersOverride>
        <forcedTraits>
            <li>
                <def>Tough</def>
            </li>
            <li>
                <def>FCP_Trait_Bloody_Mess</def>
            </li>
        </forcedTraits>
        <initialWillRange>5~10</initialWillRange>
        <initialResistanceRange>35~50</initialResistanceRange>
    </PawnKindDef>

