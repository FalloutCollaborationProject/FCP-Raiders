    <!-- Raider Scavver -->

    <PawnKindDef>
        <defName>FCP_Pawnkind_Raider_Scavver</defName>
        <label>raider scavver</label>
        <combatPower>60</combatPower>
        <race>Human</race>
        <xenotypeSet Inherit="False" />
        <itemQuality>Poor</itemQuality>
        <gearHealthRange>0.5~1.2</gearHealthRange>
        <apparelMoney>500</apparelMoney>
        <apparelAllowHeadgearChance>0.5</apparelAllowHeadgearChance>
        <apparelTags>
            <li>FCP_Raider_Armor</li>
        </apparelTags>
        <weaponMoney>400</weaponMoney>
        <weaponTags>
            <li MayRequire="Rick.FCP.MeleeWeapons">FCP_Melee_Makeshift</li>
            <li MayRequire="Rick.FCP.BallisticWeapons">FCP_Pipe_Weapons</li>
            <li>Gun</li>
        </weaponTags>
        <disallowedTraits>
            <li>Kind</li>
        </disallowedTraits>
        <requiredWorkTags>
            <li>Violent</li>
        </requiredWorkTags>
        <techHediffsMoney>0~0</techHediffsMoney>
        <techHediffsTags>
            <li>Poor</li>
        </techHediffsTags>
        <techHediffsChance>0.01</techHediffsChance>
        <initialWillRange>1~2</initialWillRange>
        <initialResistanceRange>10~18</initialResistanceRange>
        <backstoryFiltersOverride>
            <li>
                <categoriesChildhood>
                    <li>FCP_Backstory_Raiders_Child</li>
                    <li>FCP_Backstory_Wastelander_Child</li>
                </categoriesChildhood>
                <categoriesAdulthood>
                    <li>FCP_Backstory_Raiders</li>
                </categoriesAdulthood>
            </li>
        </backstoryFiltersOverride>
        <pawnGroupDevelopmentStage>Adult</pawnGroupDevelopmentStage>
    </PawnKindDef>

