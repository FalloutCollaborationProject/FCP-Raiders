<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="FCP_Apparel_Power_Armor_Base" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Raider_Power_Armor_Armor</defName>
        <label>T-45 Power Armor</label>
        <description>Power armor that has been "modified" over time by raiders. The repairs are crude at best and the armor has lost all power to it making it a large, heavy and combersome armor.</description>
        <graphicData>
            <texPath>Things/Apparel/Raider_Power_Armor/FCP_Raider_Power_Armor_Hulk_south</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <statBases>
            <ArmorRating_Sharp>0.85</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
            <ArmorRating_Heat>0.30</ArmorRating_Heat>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.06</MoveSpeed>
            <AimingDelayFactor>0.02</AimingDelayFactor>
            <ToxicEnvironmentResistance>0.7</ToxicEnvironmentResistance>
            <SocialImpact>-0.05</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/Raider_Power_Armor/FCP_Raider_Power_Armor</wornGraphicPath>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="HatBase" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Power_Armor_T45_Helmet</defName>
        <label>T-45 Power Armor Helmet</label>
        <description>Power armor that has been "modified" over time by raiders. The repairs are crude at best and the armor has lost all power to it making it a large, heavy and combersome armor.</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Apparel/Power_Armor_Headgear/T45_Helmet/FCP_T45_Power_Armor_Helmet_south</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <smeltable>false</smeltable>
        <statBases>
            <WorkToMake>3000</WorkToMake>
            <MaxHitPoints>80</MaxHitPoints>
            <Mass>0.8</Mass>
            <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
            <ArmorRating_Blunt>1.00</ArmorRating_Blunt>
            <ArmorRating_Heat>0.80</ArmorRating_Heat>
            <Insulation_Heat>2</Insulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ToxicEnvironmentResistance>0.8</ToxicEnvironmentResistance>            <!-- Good, but not perfect -->
            <MoveSpeed>-0.5</MoveSpeed>            <!-- Bulky -->
            <AimingDelayFactor>0.01</AimingDelayFactor>
            <SocialImpact>-0.05</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Power_Armor_Headgear/T45_Helmet/FCP_T45_Power_Armor_Helmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <developmentalStageFilter>Adult</developmentalStageFilter>
        </apparel>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
            <li Class="RangerRick_PowerArmor.CompProperties_ApparelRequirement">
                <requiredApparels>
                    <li>FCP_Apparel_Power_Armor_Frame</li>
                </requiredApparels>
            </li>
            <li Class="RangerRick_PowerArmor.CompProperties_PowerArmor">
                <workDisables>
                    <li>Construction</li>
                </workDisables>
                <canSleep>False</canSleep>
            </li>
        </comps>
    </ThingDef>

    <!-- Junkyard Power Armor -->

    <ThingDef ParentName="FCP_Apparel_Power_Armor_Base" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Junkyard_Power_Armor</defName>
        <label>Junkyard Power Armor</label>
        <description>A cobbled-together suit of power armor constructed from salvaged parts and scrap metal. While the power systems are barely functional and the protection is inferior to proper military power armor, it's still an intimidating sight on the battlefield.</description>
        <graphicData>
            <texPath>Things/Apparel/Junkyard_Power_Armor/FCP_Junkyard_Power_Armor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <statBases>
            <ArmorRating_Sharp>0.80</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
            <ArmorRating_Heat>0.25</ArmorRating_Heat>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.08</MoveSpeed>
            <AimingDelayFactor>0.03</AimingDelayFactor>
            <ToxicEnvironmentResistance>0.6</ToxicEnvironmentResistance>
            <SocialImpact>-0.06</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/Junkyard_Power_Armor/FCP_Junkyard_Power_Armor</wornGraphicPath>
        </apparel>
    </ThingDef>

    <!-- Scabber Power Armor -->

    <ThingDef ParentName="FCP_Apparel_Power_Armor_Base" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Scabber_Power_Armor</defName>
        <label>Scabber Power Armor</label>
        <description>A heavily weathered and corroded suit of power armor that has been patched with whatever materials were available. The rust and decay give it a menacing, diseased appearance that strikes fear into enemies.</description>
        <graphicData>
            <texPath>Things/Apparel/Scabber_Power_Armor/FCP_Scabber_Power_Armor_Hulk</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <statBases>
            <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
            <ArmorRating_Heat>0.20</ArmorRating_Heat>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.09</MoveSpeed>
            <AimingDelayFactor>0.04</AimingDelayFactor>
            <ToxicEnvironmentResistance>0.5</ToxicEnvironmentResistance>
            <SocialImpact>-0.08</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/Scabber_Power_Armor/FCP_Scabber_Power_Armor</wornGraphicPath>
        </apparel>
    </ThingDef>

    <!-- Waster Power Armor -->

    <ThingDef ParentName="FCP_Apparel_Power_Armor_Base" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Waster_Power_Armor</defName>
        <label>Waster Power Armor</label>
        <description>Power armor that has seen better days, covered in grime, scratches, and makeshift repairs. The power systems are unreliable and the armor plating is compromised, but it still provides formidable protection for wasteland raiders.</description>
        <graphicData>
            <texPath>Things/Apparel/Waster_Power_Armor/FCP_Waster_Power_Armor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <statBases>
            <ArmorRating_Sharp>0.82</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.58</ArmorRating_Blunt>
            <ArmorRating_Heat>0.28</ArmorRating_Heat>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.07</MoveSpeed>
            <AimingDelayFactor>0.025</AimingDelayFactor>
            <ToxicEnvironmentResistance>0.65</ToxicEnvironmentResistance>
            <SocialImpact>-0.055</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/Waster_Power_Armor/FCP_Waster_Power_Armor</wornGraphicPath>
        </apparel>
    </ThingDef>

</Defs>