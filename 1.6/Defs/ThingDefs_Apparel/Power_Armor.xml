<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="FCP_Apparel_Power_Armor_Base" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Raider_Power_Armor_Armor</defName>
        <label>T-45 Power Armor</label>
        <description>Power armor that has been "modified" over time by raiders. The repairs are crude at best and the armor has lost all power to it making it a large, heavy and combersome armor.</description>
        <graphicData>
            <texPath>Things/Apparel/Raider_Power_Armor/FCP_Raider_Power_Armor_Hulk_south</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <statBases>
            <ArmorRating_Sharp>0.85</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
            <ArmorRating_Heat>0.30</ArmorRating_Heat>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.06</MoveSpeed>
            <AimingDelayFactor>0.02</AimingDelayFactor>
            <ToxicEnvironmentResistance>0.7</ToxicEnvironmentResistance>
            <SocialImpact>-0.05</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Apparel/Raider_Power_Armor/FCP_Raider_Power_Armor</wornGraphicPath>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="HatBase" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Power_Armor_T45_Helmet</defName>
        <label>T-45 Power Armor Helmet</label>
        <description>Power armor that has been "modified" over time by raiders. The repairs are crude at best and the armor has lost all power to it making it a large, heavy and combersome armor.</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Apparel/Power_Armor_Headgear/T45_Helmet/FCP_T45_Power_Armor_Helmet_south</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <smeltable>false</smeltable>
        <statBases>
            <WorkToMake>3000</WorkToMake>
            <MaxHitPoints>80</MaxHitPoints>
            <Mass>0.8</Mass>
            <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
            <ArmorRating_Blunt>1.00</ArmorRating_Blunt>
            <ArmorRating_Heat>0.80</ArmorRating_Heat>
            <Insulation_Heat>2</Insulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ToxicEnvironmentResistance>0.8</ToxicEnvironmentResistance>            <!-- Good, but not perfect -->
            <MoveSpeed>-0.5</MoveSpeed>            <!-- Bulky -->
            <AimingDelayFactor>0.01</AimingDelayFactor>
            <SocialImpact>-0.05</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Power_Armor_Headgear/T45_Helmet/FCP_T45_Power_Armor_Helmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <developmentalStageFilter>Adult</developmentalStageFilter>
        </apparel>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
            <li Class="RangerRick_PowerArmor.CompProperties_PowerArmor">
                <requiredApparels>
                    <li>FCP_Apparel_Power_Armor_Frame</li>
                </requiredApparels>
                <workDisables>
                    <li>Construction</li>
                </workDisables>
                <canSleep>False</canSleep>
            </li>
        </comps>
    </ThingDef>

</Defs>