    <!-- Fiends -->

    <ThingDef ParentName="FCP_Raider_Helmet_Base">
        <defName>FCP_Apparel_Fiend_Helmet</defName>
        <description>A basic leather helmet, with a young bighorner's skull affixed to the top for decoration. The skull has a red bullseye on it, most often worn by the fiends, a particularly vicious group of raiders originating from the Mojave wasteland. It doesn’t protect well, but looks quite intimidating, which is more important to most raiders anyway.</description>
        <label>Raider Fiend Helmet</label>
        <graphicData>
            <texPath>Things/Headgear/Fiend_Helmet/FCP_Fiend_Helmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <apparel>
            <wornGraphicPath>Things/Headgear/Fiend_Helmet/FCP_Fiend_Helmet</wornGraphicPath>
        </apparel>
    </ThingDef>

