    <!-- Wastehound -->

    <ThingDef ParentName="FCP_Raider_Helmet_Base">
        <defName>FCP_Apparel_Raider_Wastehound_Helmet</defName>
        <description>A helmet constructed of several pieces of heavy burlap crudely stitched together. It also includes eye protection that looks like it was torn from a gas mask and tufts of hair. Not very potent armor, but it does intimidate the foe quite well.</description>
        <label>Raider Wastehound Helmet</label>
        <graphicData>
            <texPath>Things/Headgear/Raider_Wastehound_Helmet/FCP_Raider_Psycho_Tic_Helmet</texPath>
