    <!-- Arclight -->

    <ThingDef ParentName="FCP_Raider_Helmet_Base">
        <defName>FCP_Apparel_Raider_Arclight_Helmet</defName>
        <description>A repurposed welding mask. It offers fairly good protection from the front but leaves the back of the head virtually unprotected. It encourages its wearer to storm blindly at the enemy, as retreating becomes a bad, and often fatal, idea.</description>
        <label>Raider Arclight Helmet</label>
        <costList Inherit="False">
            <Steel>15</Steel>
        </costList>
        <statBases Inherit="False">
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToMake>2300</WorkToMake>
            <Mass>1.0</Mass>
            <MarketValue>50</MarketValue>
            <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
            <ArmorRating_Heat>0.2</ArmorRating_Heat>
            <EquipDelay>1.2</EquipDelay>
        </statBases>
        <graphicData>
            <texPath>Things/Headgear/Raider_Arclight_Helmet/Raider_Arclight_Helmet</texPath>
