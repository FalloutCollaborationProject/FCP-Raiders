    <!-- Blastmaster -->

    <ThingDef ParentName="FCP_Raider_Helmet_Base">
        <defName>FCP_Apparel_Raider_Blastmaster_Helmet</defName>
        <description>Comprised of a firefighter's helmet worn on top of a gas mask, the blastmaster helmet does provide decent protection and is often covered with fire-retardant substances.</description>
        <label>Raider Blastmaster Helmet</label>
        <equippedStatOffsets>
            <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>            <!-- Guns +5 Explosives +5 -->
