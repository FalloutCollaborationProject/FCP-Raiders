<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!--_____ Raider Armor (FoNV) _____-->

	<!-- Base -->
	
	<ThingDef Name="FCP_Raider_Armor_Base" ParentName="ApparelBase" Abstract="True">
		<smeltable>false</smeltable>
		<recipeMaker Inherit= "false">
			<unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<researchPrerequisite>FCP_Research_Apparel_Production</researchPrerequisite>
			<recipeUsers>
				<li>FCP_Production_Tailoring_Workbench</li>				<!-- Uses tailoring bench because it's mostly clothes -->
			</recipeUsers>
		</recipeMaker>
		<costList>
			<Cloth>60</Cloth>
		</costList>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>4600</WorkToMake>			<!-- Cheap and quickly made but bad for protection -->
			<Mass>1</Mass>
			<MarketValue>70</MarketValue>
			<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
			<ArmorRating_Heat>0.2</ArmorRating_Heat>
			<Insulation_Cold>1</Insulation_Cold>
			<Insulation_Heat>3</Insulation_Heat>
			<EquipDelay>1.2</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>FCP_Raider_Armor</li>
			</tags>
		</apparel>
		<comps>
			<li Class="FCP.Core.CompProperties_LabelColored">
				<rarity>Common</rarity>
			</li>
		</comps>
	</ThingDef>

	<!-- Badlands -->

	<ThingDef ParentName="FCP_Raider_Armor_Base">
		<defName>FCP_Apparel_Raider_Badlands_Armor</defName>
		<description>A piece of tattered clothing, wrapped up in some places with duct tape, a wide leather belt, and black combat boots. These clothes are often worn by raiders and provide barely any protection.</description>
		<label>Raider Badlands Armor</label>
		<graphicData>
			<texPath>Things/Apparel/Badlands_Armor/FCP_Badlands_Armor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<apparel>
			<wornGraphicPath>Things/Apparel/Badlands_Armor/FCP_Badlands_Armor</wornGraphicPath>
		</apparel>
	</ThingDef>

	<!-- Blastmaster -->

	<ThingDef ParentName="FCP_Raider_Armor_Base">
		<defName>FCP_Apparel_Raider_Blastmaster_Armor</defName>
		<description>A leather coat covered in an excessive number of rags, chains, and metal plates with pieces of rebar welded onto them. As far as raider armors go, this one protects fairly well, but in turn is quite heavy. Usually worn by raiders with (some) self-preservation instinct.</description>
		<label>Raider Blastmaster Armor</label>
		<graphicData>
			<texPath>Things/Apparel/Blastmaster_Armor/FCP_Blastmaster_Armor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<apparel>
			<wornGraphicPath>Things/Apparel/Blastmaster_Armor/FCP_Blastmaster_Armor</wornGraphicPath>
		</apparel>
	</ThingDef>

	<!-- Painspike -->

	<ThingDef ParentName="FCP_Raider_Armor_Base">
		<defName>FCP_Apparel_Raider_Painspike_Armor</defName>
		<description>A piece of tattered clothing, wrapped up in some places with duct tape, a wide leather belt, and black combat boots. These clothes are often worn by raiders and provide barely any protection.</description>
		<label>Raider Painspike Armor</label>
		<graphicData>
			<texPath>Things/Apparel/Painspike_Armor/FCP_Painspike_Armor</texPath>
